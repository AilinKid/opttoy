  columns: a.y:1 b.z:3
  projections:
    variable (a.y) [in=1]
    variable (b.z) [in=3]
  inputs:
    inner join
      columns: a.x:0* +a.y:1 b.x:2* +b.z:3*
      filters:
        comp (=) [in=0,2]
          inputs:
            variable (a.x) [in=0]
            variable (b.x) [in=2]
      inputs:
        scan
          columns: +a.x:0* +a.y:1
          filters:
            comp (>) [in=0]
              inputs:
                variable (a.x) [in=0]
                const (7)
        scan
          columns: +b.x:2* +b.z:3*
          filters:
            comp (>) [in=2]
              inputs:
                variable (b.x) [in=2]
                const (7)
            comp (=) [in=3]
              inputs:
                variable (b.z) [in=3]
                const (3)

push_down
SELECT * FROM a JOIN b ON (a.x = b.x) WHERE a.y + b.z > 1
----
project
  columns: a.x:0 a.y:1 b.x:2 b.z:3
  projections:
    variable (a.x) [in=0]
    variable (a.y) [in=1]
    variable (b.x) [in=2]
    variable (b.z) [in=3]
  inputs:
    inner join
      columns: +a.x:0* +a.y:1* +b.x:2* +b.z:3*
      filters:
        comp (=) [in=0,2]
          inputs:
            variable (a.x) [in=0]
            variable (b.x) [in=2]
        comp (>) [in=1,3]
          inputs:
            binary (+) [in=1,3]
              inputs:
                variable (a.y) [in=1]
                variable (b.z) [in=3]
            const (1)
      inputs:
        scan
          columns: +a.x:0 +a.y:1
        scan
          columns: +b.x:2 +b.z:3

push_down
SELECT * FROM (SELECT a.x+1 FROM a) AS b(x) WHERE x > 1
----
project
  columns: b.x:2
  projections:
    variable (b.x) [in=2]
  inputs:
    rename
      columns: +b.x:2
      inputs:
        project
          columns: +.column1:2
          projections:
            binary (+) [in=0]
              inputs:
                variable (a.x) [in=0]
                const (1)
          inputs:
            scan
              columns: +a.x:0* a.y:1
              filters:
                comp (>) [in=0]
                  inputs:
                    binary (+) [in=0]
                      inputs:
                        variable (a.x) [in=0]
                        const (1)
                    const (1)
