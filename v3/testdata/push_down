CREATE TABLE a (x INT, y INT)
----
table a
  x NULL
  y NULL

exec
CREATE TABLE b (x INT, z INT)
----
table b
  x NULL
  z NULL

prep,push_down
SELECT a.y, b.z FROM a JOIN b ON (a.x = b.x) WHERE a.x > 7 AND b.z = 3
----
project
  columns: a.y:1 b.z:3
  projections:
    variable (a.y) [in=1]
    variable (b.z) [in=3]
  inputs:
    inner join
      columns: a.x:0* a.y:1 b.x:2* b.z:3*
      filters:
        comp (=) [in=0,2]
          inputs:
            variable (a.x) [in=0]
            variable (b.x) [in=2]
      inputs:
        scan
          columns: a.x:0* a.y:1
          filters:
            comp (>) [in=0]
              inputs:
                variable (a.x) [in=0]
                const (7)
        scan
          columns: b.x:2* b.z:3*
          filters:
            comp (=) [in=3]
              inputs:
                variable (b.z) [in=3]
                const (3)
            comp (>) [in=2]
              inputs:
                variable (b.x) [in=2]
                const (7)

prep,push_down
SELECT * FROM a JOIN b ON (a.x = b.x) WHERE a.y + b.z > 1
----
inner join
  columns: a.x:0* a.y:1* b.x:2* b.z:3*
  filters:
    comp (=) [in=0,2]
      inputs:
        variable (a.x) [in=0]
        variable (b.x) [in=2]
    comp (>) [in=1,3]
      inputs:
        binary (+) [in=1,3]
          inputs:
            variable (a.y) [in=1]
            variable (b.z) [in=3]
        const (1)
  inputs:
    scan
      columns: a.x:0* a.y:1*
      filters:
        comp (IS NOT) [in=0]
          inputs:
            variable (a.x) [in=0]
            const (NULL)
        comp (IS NOT) [in=1]
          inputs:
            variable (a.y) [in=1]
            const (NULL)
    scan
      columns: b.x:2* b.z:3*
      filters:
        comp (IS NOT) [in=2]
          inputs:
            variable (b.x) [in=2]
            const (NULL)
        comp (IS NOT) [in=3]
          inputs:
            variable (b.z) [in=3]
            const (NULL)

prep,push_down
SELECT * FROM (SELECT a.x+1 FROM a) AS b(x) WHERE x > 1
----
rename
  columns: b.x:2*
  inputs:
    project
      columns: .column1:2*
      projections:
        binary (+) [in=0]
          inputs:
            variable (a.x) [in=0]
            const (1)
      inputs:
        scan
          columns: a.x:0* a.y:1
          filters:
            comp (>) [in=0]
              inputs:
                binary (+) [in=0]
                  inputs:
                    variable (a.x) [in=0]
                    const (1)
                const (1)
